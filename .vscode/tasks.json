{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/HtGtkHost/HtGtkHost.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/HtGtkHost/HtGtkHost.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    { 
      "label": ".NET Core Test with debugger", 
      "type": "process", 
      "isBackground": true, 
      "command": "dotnet", 
      "args": [ "test" ], 
      "options": 
          { 
              "cwd": "${workspaceFolder}/tests", 
              "env": 
              { 
                  "VSTEST_HOST_DEBUG": "1" 
              }, 
          }, 
      "group": "test", "presentation": 
          { 
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
          },
      "problemMatcher": [] 
     },
     {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/HtGtkHost/HtGtkHost.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}